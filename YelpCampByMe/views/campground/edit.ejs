<%-include('../partials/bootstrap.ejs') %>
  <body>
    <%-include('../layouts/navbar')%>
    <h1>Update Campground : -</h1>

    <form
      action="/campgrounds/updating.../<%=campground._id%>?_method=put"
      method="post"
      novalidate
      class="validate-form"
    >
      <div>
        <label for="name">Campground Name: </label>
        <input
          class="form-control"
          type="text"
          id="name"
          name="name"
          required
          value="<%=campground.name%>"
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div>
        <label for="location">Location: </label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="city"
          required
          value="<%=campground.city%>"
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div>
        <label for="price">Price:</label>
        <input
          class="form-control"
          type="number"
          id="price"
          name="price"
          required
          value="<%=campground.price%>"
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button>Update</button>
    </form>

    <a href="/campgrounds">Back</a>

    <%-include('../partials/JavaScript.ejs') %>
    <%-include('../partials/validateForm.ejs') %>
  </body>

  
</html>
